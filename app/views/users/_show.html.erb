<div class="show-layout container">
  <div class="row">
    <div class="show-top col-xs-12">
      <div class="upper-bar clearfix">
      <div class="user-info">
        <h3><%= "#{current_user.first_name} #{current_user.last_name}" %></h3>
        <h4 class="address"><%= "#{current_user.address}, #{current_user.zip_code}" %></h4>
      </div>
        <%= link_to 'Download Report (PDF)', pdf_download_path(current_user), class: "btn btn-primary btn-download" %>
      </div>
      
      <div class="col-md-2 col-lg-3"></div>
      <div class="current-temp col-xs-12 col-sm-6 col-md-3 col-lg-2">
        <h3 class="stat-num temp-num"><%= current_user.current_temp %></h3>
        <h5 class="stat-description">current temperature</h5>
      </div>
      
      <div class="col-md-2 col-lg-3"></div>
      <div class="violations col-xs-12 col-sm-6 col-md-3 col-lg-2">
        <h3 class="stat-num"><%= current_user.violation_count %></h3>
        <h5 class="stat-description">violations</h5>
      </div>
    </div>

    </div>
  <div class="row">
    <div class="show-bottom">
      <%= render "users/line_graph", :user => current_user %>
    </div>
  </div>

</div>