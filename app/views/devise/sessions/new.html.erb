<div class="col-md-4" id="form-id">
  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <dl><%= f.label :email %>:
    <%= f.email_field :email, :autofocus => true, class: "form-control"  %></dl>

    <dl><%= f.label :password %>:
    <%= f.password_field :password, class: "form-control"  %></dl>

    <% if devise_mapping.rememberable? -%>
      <dl><%= f.check_box :remember_me %> <%= f.label :remember_me %></dl>
    <% end -%>

    <div><%= f.submit "Sign in", class: "btn btn-primary" %></div>
  <% end %>
