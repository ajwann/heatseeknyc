<div id="form-id">
  <div class="container settings-header">
    <div class="settings-title">
      <h1>Edit My Settings</h1>
  <!-- Ethan substituted "Edit [advocate Name]"  for -->
  <!-- "Edit My Settings" Thought made more sense  -->  
  <!--  <h2>Edit <%= resource_name.to_s.humanize %></h2>  -->
    </div>
  </div>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="container col-lg-5 col-md-6 col-sm-6 col-xs-12">
      
      <dl class="settings-input"><%= f.label :first_name %>:
      <%= f.text_field :first_name, :autofocus => true, class: "settings-form-control form-control" %></dl>

      <dl class="settings-input"><%= f.label :last_name %>:
      <%= f.text_field :last_name, class: "settings-form-control form-control" %></dl>

      <dl class="settings-input"><%= f.label :address %>:
      <%= f.text_field :address, class: "settings-form-control form-control" %></dl>

      <dl><%= f.label :zip_code %>:
      <%= f.text_field :zip_code, class: "settings-form-control form-control" %></dl>

      <dl><%= f.label :email %>:
      <%= f.email_field :email, class: "settings-form-control form-control" %></dl>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <dl>Currently waiting confirmation for: <%= resource.unconfirmed_email %></dl>
      <% end %>

      <dl><%= f.label :password %>: <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, :autocomplete => "off", class: "settings-form-control form-control" %></dl>

      <dl><%= f.label :password_confirmation %>:
      <%= f.password_field :password_confirmation, class: "settings-form-control form-control" %></dl>

      <dl><%= f.label :current_password %>: <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, class: "settings-form-control form-control" %></dl>
    <div>
      
      <div class="container save-or-delete">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <%= f.submit "Update", class: "btn-delete" %>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
          <%= button_to "Cancel my account", registration_path(resource_name), class: "btn-delete", :data => { :confirm => "Are you sure?" }, :method => :delete %>
          <!-- <h4>Unhappy</h4> -->
          <!-- <h3>Cancel my account</h3> -->
        </div>
      </div>
    </div>
  
  <% end %>

  
  </div>
</div>
